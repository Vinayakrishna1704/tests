        <div id="requests" style="display: none;">
            <h2>All Requests</h2>
            <!-- Display rental requests with the ability to accept or deny -->
            <ul>
                <li>Name: A-4-1</li>
                <li>Advance Amount: $1000</li>
                <li>Rental Cost: $500</li>
                <li>Bedrooms: 2BHK</li>
                <li>Floor Space: 800 sqft</li>
                <li>Status: Vacant</li>
