@using System.Data
@model List<DataRow>

<!DOCTYPE html>
<html lang="en">

<head>
    
    <style>
        #apartment-details {
            margin: 20px;
            padding: 20px;
            background-color: #f5f5f5; /* Light gray background */
            border-radius: 5px;
        }

            #apartment-details h3 {
                margin-bottom: 15px;
                font-weight: bold;
            }

            #apartment-details form .form-group {
                margin-bottom: 10px;
            }

            #apartment-details form label {
                display: block;
                font-weight: bold;
            }

            #apartment-details form input[type="text"] {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            #apartment-details form button.btn-success {
                background-color: #4CAF50; /* Green */
                color: white;
                border: none;
                padding: 8px 12px;
                border-radius: 5px;
                cursor: pointer;
            }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: black;
            padding-top: 70px;
        }

            .sidebar a {
                padding: 8px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .content {
            margin-left: 260px;
            padding: 80px;
        }

        #apartment-list,
        #registered-users,
        #requests,
        #apartment-management {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px;
        }

        h2 {
            color: #343a40;
        }

        .btn-aesthetic {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-right: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-aesthetic:hover {
                background-color: #495057;
            }

        .form-group {
            margin-bottom: 15px;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        #registered-users table {
            border: 1px solid #ccc;
            border-collapse: collapse; /* Combines borders for adjacent cells */
            width: 100%; /* Adjust width as needed */
        }

        #registered-users th,
        #registered-users td {
            padding: 10px;
            text-align: left; /* Adjust alignment as needed */
        }

        #registered-users th {
            background-color: #f2f2f2; /* Light gray header background */
        }
        #registered-users tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>


<body>

   
    <div class="sidebar">

        <a href="#" onclick="showRegisteredUsers()">Registered Users</a>
        <a href="#" onclick="showRequests()">All Requests</a>
        <a href="#" onclick="showApartmentManagement()">Apartments</a>
    </div>

    <div class="content">
        <div id="apartment-list" style="display: none;">
            <h2>Apartment List</h2>
            <!-- Display available apartment details here -->
            <ul>
                <li>Apartment 1</li>
                <li>Apartment 2</li>
                <li>Apartment 3</li>
                <li>Apartment 4</li>
                <li>Apartment 5</li>
            </ul>
        </div>

        <div id="registered-users">
            <h2>Registered Users</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (DataRow row in @Model)
                        {
                            <tr>
                                <td>@row["id"].ToString()</td>
                                <td>@row["first_name"].ToString()</td>
                                <td>@row["email"].ToString()</td>
                                <td>@row["phone_no"].ToString()</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>


        <div id="requests" style="display:none">
            <h2>All Requests</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Apartment Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
