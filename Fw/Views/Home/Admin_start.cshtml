            </ul>
            <ul>
                <li>Name: B-2-5</li>
                <li>Advance Amount: $1200</li>
                <li>Rental Cost: $600</li>
                <li>Bedrooms: 3BHK</li>
                <li>Floor Space: 1200 sqft</li>
                <li>Status: Rented Out</li>
                <li>Notice Period: 45 days</li>
            </ul>
        </div>

        <div id="apartment-management" style="display: none;">
            <h2>Apartments</h2>
            <!-- Add, edit, or delete apartment details -->
            <button onclick="addApartment()">Add Apartment</button>
            <button onclick="editApartmentDetails()">Edit Apartment Details</button>
            <button onclick="removeApartment()">Remove Apartment</button>

            <!-- Display apartment details with editing capabilities for the admin -->
            <div id="apartment-details" style="margin-top: 20px;">
                <h3>Apartment Details</h3>
                <form>
                    <label for="advanceAmount">Advance Amount:</label>
                    <input type="text" id="advanceAmount" name="advanceAmount"><br>

                    <label for="rentalCost">Rental Cost:</label>
                    <input type="text" id="rentalCost" name="rentalCost"><br>

                    <label for="bedrooms">Bedrooms (2BHK/3BHK):</label>
                    <input type="text" id="bedrooms" name="bedrooms"><br>

                    <label for="floorSpace">Floor Space:</label>
                    <input type="text" id="floorSpace" name="floorSpace"><br>

                    <label for="status">Status (Rented Out/Vacant):</label>
                    <input type="text" id="status" name="status"><br>

                    <label for="noticePeriod">Notice Period:</label>
                    <input type="text" id="noticePeriod" name="noticePeriod"><br>

                    <button type="button" onclick="saveApartmentDetails()">Save</button>
                </form>
            </div>
        </div>
    </div>

    </footer>
    <script>
    function showApartmentList() {
        hideAll();
        document.getElementById("apartment-list").style.display = "block";
    }

    function showRegisteredUsers() {
        hideAll();
        document.getElementById("registered-users").style.display = "block";
    }

    function showRequests() {
        hideAll();
        document.getElementById("requests").style.display = "block";
    }

    function showApartmentManagement() {
        hideAll();
        document.getElementById("apartment-management").style.display = "block";
    }

    function hideAll() {
        document.getElementById("apartment-list").style.display = "none";
        document.getElementById("registered-users").style.display = "none";
        document.getElementById("requests").style.display = "none";
        document.getElementById("apartment-management").style.display = "none";
    }

    // Simulated data for apartments
    let apartments = [
        { name: 'A-4-1', advanceAmount: 1000, rentalCost: 500, bedrooms: '2BHK', floorSpace: 800, status: 'Vacant', noticePeriod: 30 },
        // ... add data for other apartments ...
    ];

    // Function to add a new apartment
    function addApartment() {
        let newApartment = {
            name: prompt('Enter apartment name (e.g., A-4-1):'),
            advanceAmount: parseInt(prompt('Enter advance amount:')),
            rentalCost: parseInt(prompt('Enter rental cost:')),
            bedrooms: prompt('Enter number of bedrooms (2BHK/3BHK):'),
            floorSpace: parseInt(prompt('Enter floor space:')),
            status: 'Vacant', // New apartments are initially vacant
            noticePeriod: parseInt(prompt('Enter notice period:'))
        };

        apartments.push(newApartment);
        alert('Apartment added successfully!');
    }

    function editApartmentDetails() {
        let apartmentName = prompt('Enter apartment name to edit:');
        let apartmentIndex = apartments.findIndex(apartment => apartment.name === apartmentName);

        if (apartmentIndex !== -1) {
            // Apartment found, allow editing
            apartments[apartmentIndex].advanceAmount = parseInt(prompt('Enter new advance amount:'));
            apartments[apartmentIndex].rentalCost = parseInt(prompt('Enter new rental cost:'));
            apartments[apartmentIndex].bedrooms = prompt('Enter new number of bedrooms (2BHK/3BHK):');
            apartments[apartmentIndex].floorSpace = parseInt(prompt('Enter new floor space:'));
            apartments[apartmentIndex].noticePeriod = parseInt(prompt('Enter new notice period:'));

            alert('Apartment details updated successfully!');
        } else {
            alert('Apartment not found!');
        }
    }

    function removeApartment() {
        let apartmentName = prompt('Enter apartment name to remove:');
        let apartmentIndex = apartments.findIndex(apartment => apartment.name === apartmentName);

        if (apartmentIndex !== -1) {
            // Apartment found, remove it
            apartments.splice(apartmentIndex, 1);
            alert('Apartment removed successfully!');
        } else {
            alert('Apartment not found!');
        }
    }

    function saveApartmentDetails() {
        alert('Apartment details saved successfully!');
    }
    </script>

