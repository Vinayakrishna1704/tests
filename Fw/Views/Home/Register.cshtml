@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Apartment Rentals</title>
    
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }

        section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin: 20px auto;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 10px;
            font-weight: bold;
            color: #343a40;
        }

        input {
            margin: 5px 0;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        button {
            margin-top: 20px;
            padding: 10px;
            background-color: #343a40;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #23272b;
            }

        p {
            margin-top: 10px;
            text-align: center;
            color: #343a40;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="bg-dark">
        <div class="container">
            <img src="your_logo.png" alt="Logo" style="max-width: 100px;">
            <h1 class="text-white">Register for Apartment Rentals</h1>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Back button to navigate to the home page -->
            <a class="navbar-brand" href="/">Back to Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Remove the home and login links -->
            </div>
        </div>
    </nav>

    <section class="container mt-4">
        <form action="/home/register" method="post">
            <label for="name">First Name:*</label>
            <input type="text" id="fname" name="fname" required pattern="{1,}">

            <label for="name">Last Name:*</label>
            <input type="text" id="lname" name="lname" required pattern="{1,}">

            <label for="email">Email:*</label>
            <input type="email" id="email" name="email" required>

            <label for="phone">Phone number:*</label>
            <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" >

            <label for="password">Password:*</label>
            <input type="password" id="password" name="password" required>

            <button type="submit" class="btn btn-dark mt-3">Register</button>
        </form>

        <p>Already have an account? <a href="/login">@Html.ActionLink("Login Here","Login") </a></p>
    </section>
    
    <footer class="bg-dark">
        <div class="container text-white">
            &copy; 2024 Apartment Rentals
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
