@{
    Layout = null;
}
@using System.Data
@model List<DataRow>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@1,600&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>

        .bottom-images{
            display:flex;
            justify-content:space-around;
            margin-top:20px;
        }
        .bottom-images img{
            width:100px;
            height:100px;
            border-radius:5px;
            margin-bottom:10px;
        }

        .register-login {
            display: flex;
            gap: 10px;
            position: absolute;
            top: 5px;
            right: 15px;
        }

            .register-login a {
                color: white;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .register-login a:hover {
                    background-color: #444;
                }

        h1 {
            font-family: 'Alegreya', sans-serif;
            font-size: 3rem;
            color: white;
            text-align: center;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: black;
            color: white;
            padding: 10px 25px;
            text-align: center;
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            height: 100;
        }

        nav {
            display: flex;
            justify-content: space-around;
            background-color: #666;
            padding: 10px;
        }

            nav a {
                color: white;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                nav a:hover {
                    background-color: #444;
                }

        .filter-section {
            padding: 20px;
            background-color: #fff;
            margin: 20px;
            border-radius: 10px;
        }

        .apartment {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .apartment-card {
            width: 300px;
            margin: 20px;
            padding: 10px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .apartment-card img {
                width: 100%;
                border-radius: 5px;
                margin-bottom: 10px;
            }
        .apartment {
            border: 1px solid #ccc;
            border-collapse: collapse; 
            width: 100%; 
        }
        .apartment th,
        .apartment td {
            padding: 10px;
            text-align: left; 
        }
        .apartment th {
            background-color: #f2f2f2; /* Light gray header background */
        }

        .apartment tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>
    <header>
        <h1>Team D Rentals</h1>
        <img src="~/images/photos/logo.jpg" alt="Logo" style="max-width: 100px; margin-top: 1px;">
        <div class="register-login">
            <a href="#">@Html.ActionLink("Register", "Register")</a>
            <a href="#">@Html.ActionLink("Login", "Login")</a>
        </div>
    </header>
    <div class="filter-section">
        <form asp-controller="Home" asp-action="Home" method="post">
            <label for="bhk">BHK Type:</label>
            <select name="bhk" id="bhk">
                <!-- Options for BHK type -->
               <!---- <option value="1">1 BHK</option> -->
                <option value="">Select Range</option>
                <option value="2">2 BHK</option>
                <option value="3">3 BHK</option>
            </select>
            <label for="vacancy">Vacancy:</label>
            <select id="vacancy" name="vacancy">
                <!-- Options for vacancy -->
                <option value="">Select Vacancy</option>
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
            <label for="rent">Rent Cost:</label>
            <select name="cost" id="cost">
                <option value="">Select Cost</option>
                <option value="10">5000-8000</option>
                <option value="11">8000-10000</option>
                <option value="1">less than 5000</option>
                <option value="2">Greater than 10000</option>
            </select>
            <label for="floor-space">Floor Space:</label>
            <select name="floorspace" id="floorspace">
                <option value="">Select Floor Space</option>
                <option value="10">200-300</option>
                <option value="11">300-400</option>
                <option value="1">less than 200</option>
                <option value="2">greater than 400</option>
            </select>

            <button>Apply Filters</button>
    </div>
    <div class="apartment">
        
        <table>
            <thead>
                <tr>
                <th>S.NO</th>
                <th>APARTMENT.NO</th>
                <th>BHK</th>
                <th>RENTAL COST</th>
                <th>FLOOR SPACE</th>
                <th>VACENCY</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        DataRow row = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>A-@row["floor_num"].ToString()-@row["apartment_no"].ToString()</td>
                            <td>@row["bhk"].ToString()</td>
                            <td>@row["rent_cost"].ToString()</td>
                            <td>@row["floor_space"].ToString() sq</td>
                            <td>
                            @if ((int)@row["is_rented"] == 0)
                            {
                            <span>RENTED</span>
                            }
                            else{
                            <span>VACENT</span>
                            }
                            </td>

                        </tr>
                    }
                }

            </tbody>
            </table>


           
        </div>
    <div class="bottom-images">
        <img src="~/images/photos/2.jpg" alt="2bhk img" />
        <h2>2BHK APARTMENT</h2>
        </div>
    <div class="bottom-images">
        <img src="~/images/photos/3.jpg" alt="3bhk img" />
        <h2>3BHK APARTMENT</h2>
        </div>

</body>
</html>