@{
    Layout = null;
}
@using System.Data
@model List<DataRow>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@1,600&display=swap" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>

        .register-login {
            display: flex;
            gap: 10px;
            position: absolute;
            top: 5px;
            right: 15px;
        }

            .register-login a {
                color: white;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .register-login a:hover {
                    background-color: #444;
                }

        h1 {
            font-family: 'Alegreya', sans-serif;
            font-size: 3rem;
            color: white;
            text-align: center;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }

        header {
            background-color: black;
            color: white;
            padding: 10px 25px;
            text-align: center;
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            height: 100;
        }

        nav {
            display: flex;
            justify-content: space-around;
            background-color: #666;
            padding: 10px;
        }

            nav a {
                color: white;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                nav a:hover {
                    background-color: #444;
                }

        .filter-section {
            padding: 20px;
            background-color: #fff;
            margin: 20px;
            border-radius: 10px;
        }

        .apartment {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .apartment-card {
            width: 300px;
            margin: 20px;
            padding: 10px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .apartment-card img {
                width: 100%;
                border-radius: 5px;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <header>
        <h1>Team D Rentals</h1>
        <img src="~/images/photos/logo.jpg" alt="Logo" style="max-width: 100px; margin-top: 1px;">
        <div class="register-login">
            <a href="#">@Html.ActionLink("Register", "Register")</a>
            <a href="#">@Html.ActionLink("Login", "Login")</a>
        </div>
    </header>
    <div class="filter-section">
        <form asp-controller="Home" asp-action="Home" method="post">
            <label for="bhk">BHK Type:</label>
            <select name="bhk" id="bhk">
                <!-- Options for BHK type -->
                <option value="1">1 BHK</option>
                <option value="2">2 BHK</option>
                <option value="3">3 BHK</option>
            </select>
            <label for="vacancy">Vacancy:</label>
            <select id="vacancy">
                <!-- Options for vacancy -->
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
            <label for="rent">Rent Cost:</label>
            <select name="cost" id="cost">
                <option value="10">5000-8000</option>
                <option value="11">8000-10000</option>
                <options value="less">less than 5000</options>
                <option value="great">Greater than 10000</option>
            </select>
            <label for="floor-space">Floor Space:</label>
            <select name="floorspace" id="floorspace">
                <option value="10">200-300</option>
                <option value="11">300-400</option>
                <option value="less">less than 200</option>
                <options value="great">greater than 400</options>
            </select>

            <button>Apply Filters</button>
    </div>
    <div class="apartment">
        <!-- Sample apartment cards, replace with dynamic data -->
        <div class="apartment-card">
            @for (int i = 0; i < Model.Count; i++)
            {
                DataRow row = Model[i];
                if (@row["bhk"].ToString() == "2")
                {

                    <img src="~/images/photos/1.jpg" alt="Apartment 1">
                    <h2>A - @row["floor_num"].ToString() - @row["apartment_no"]</h2>
                    <p>BHK:@row["bhk"].ToString()| Vacancy: Available | Rent: @row["rent_cost"].ToString()| Floor Space: @row["floor_space"].ToString() sq ft</p>
                }
                else
                {
                    <img src="~/images/photos/2.jpg">
                    <h2>A - @row["floor_num"].ToString() - @row["apartment_no"]</h2>
                    <p>
                        BHK:@row["bhk"].ToString()| Vacancy: Available | Rent: @row["rent_cost"].ToString()|  Floor Space: @row["floor_space"].ToString() sq ft
                    </p>
                }

            }


            
            <!-- Add more apartment cards as needed -->
        </div>
</body>
</html>